<p id="notice"></p>
<div class="container col-10">
   <div class="row">
        <div class="col-3">
        <%= render 'public/mypages/list', user: current_user, action: @action %>
        </div>
            <div class="container col-9">
                <div class="row">
                    <div class="col-md-8 offset-md-1">
                    <h2>自分のがんばる！</h2>
                        <table class="table table-hover table-inveres">
                        <thead>
                            <tr>
                                <th>日付</th>
                                <th>がんばるリスト</th>
                                <th>投稿者</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @action.each do |action| %>
                         <tr>
                            <td>
                                <%= action.created_at.strftime('%Y/%m/%d') %>
                            </td>
                            <td>
                                <%= link_to action.content, action_path(action.id)%>
                            </td>
                            <td> 
                                <%= link_to "削除", action_path(action.id), method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
                            </td>
                        </tr>
                        <% end %>
                        </tbody>
                        
                </div>
            </div>
        </div>
    </div>
</div> 