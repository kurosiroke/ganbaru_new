<p id="notice"></p>
<div class="container col-8">
    <h3>取り組みリスト確認</h3>
        <table class="table">
           <tbody>
            <tr>
                <td><%= @attempt.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                    <%= @attempt.content %>
                </td>
                <td><%= link_to "編集", edit_attempt_path, class: 'btn btn-sm btn-success' %></td>
                <td><%= link_to "削除", attempt_path, method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %></td>
            </tr>
            </tbody>
        </table>
</div>