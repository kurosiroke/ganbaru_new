
<table class="table">
  <thead>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th><%= user. profile%></th>
    </tr>
    <tr>
      <th><%= link_to "お気に入り", favorites_attempts_path %></th>
    </tr>
  </thead>
</table>
<div class="row">
    <%= link_to  edit_profile_path(user), class: "btn btn-success btn-default btn-sm" do %>
      編集
    <% end %>
</div>
<h5 class="mt-3">がんばること</h5>
<%= form_with model: attempt, url: attempts_path, method: :post do |f| %>
    <%= f.text_area :content %><br>
    <div class="form-group m-5">タグ</div>
    <div class="row d-flex justify-content-start m-5">
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
      <div class="form-check form-check-inline flex flex-wrap">
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
    </div>
    <%= f.submit "投稿", class: "btn btn-success btn-default btn-sm" %>
<% end %>