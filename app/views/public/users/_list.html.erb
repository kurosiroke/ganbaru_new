<h2>マイページ</h2>
<table class="table">
  <thead>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th><%= user. profile%></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<div class="row">
     <%= link_to user_path(user), class: "btn btn-outline-secondary btn-default btn-sm btn-block" do  %>
     <i class="fas fa-user-cog"></i>
     <% end %>
</div>
<h2 class="mt-3">Newのがんばる！
<%= form_with model: action do |f| %>
  <h4>がんばること</h4>
  <%= f.text_area :content %>
  <%= f.submit "Create action", class: "btn btn-success btn-default btn-sm" %>
<% end %>