
<table class="table">
  <thead>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th><%= user. profile%></th>
    </tr>
  </thead>
</table>
<div class="row">
    <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-default btn-sm" do %>
      編集
    <% end %>
</div>
<h2 class="mt-3">
<%= form_with model: action do |f| %>
  <h5>がんばること</h5>
  <%= f.text_area :content %>
  <%= f.submit "投稿", class: "btn btn-success btn-default btn-sm" %>
<% end %>