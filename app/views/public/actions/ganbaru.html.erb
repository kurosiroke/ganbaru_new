<div class="container col-10">
    <div class="row">
        <!--<div class="col-md-3">-->
        <%#= render 'public/users/list', user: current_user, action: @action %>
        <!--</div>-->
        <div class="col-md-8 offset-md-1">
        <h2>みんなのがんばる！</h2>
            <table class="table table-hover table-inveres">
            <thead>
                <tr>
                    <th>日付</th>
                    <th>がんばるリスト</th>
                    <th>投稿者</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% @ganbaru.each do |action| %>
            <tr>
                <td><%= action.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                    <%= link_to action_path(action.id) do %>
                    <%= action.content %>
                    <% end %>
                </td>
                <td>
                    <%= link_to @user do %>
                    <%= action.user.name %></td>
                    <% end %>
                <td> 
                    <% if @action.user == current_user %>
                    <%= link_to "削除", action_path, method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
                    <% end %>
                </td>
            </tr>
            <% end %>
            </tbody>
        </div>
    </div>
</div>