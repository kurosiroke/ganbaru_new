<p id="notice"></p>
<div class="container col-8">
  <div class="text-center">
    <h2>一人じゃない！　みんながんばってる！</h2>
  </div>
  <div>新着順</div>
  <table class="table table-hover table-inveres">
    <thead>
      <tr>
        <th>日付</th>
        <th>がんばること！</th>
        <th>投稿者</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @ganbaru.each do |attempt| %>
      <tr>
        <td><%= attempt.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to attempt_path(attempt.id) do %>
          <%= attempt.content %>
          <% end %>
        </td>
        <td>
          <%= link_to @user do %>
          <%= attempt.user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div>
  <% if user_signed_in? %>
    <%= link_to ganbaru_attempts_path do %>
      みんなのがんばる！一覧
    <% end %>
  <% end %>
  </div>
  <table class="table table-hover table-inveres">
     <thead>
      <tr>
        <th>日付</th>
        <th>がんばったこと!</th>
        <th>投稿者</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @ganbatta.each do |attempt| %>
      <tr>
        <td><%= attempt.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to attempt_path(attempt.id) do %>
          <%= attempt.content %>
          <% end %>
        </td>
        <td>
          <%= link_to @user do %>
          <%= attempt.user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

