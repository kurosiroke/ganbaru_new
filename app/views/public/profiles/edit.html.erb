<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: profile_path(@user.id) do |f| %>
        <div class="form-group">
            <label for="user_name">ニックネーム</label>
            <%= f.text_field :name, class: 'form-control name', placeholder: "Name", id: "name" %>
        </div>
        <div class="form-group">
            <label for="user profile">自己紹介</label>
            <%= f.text_area :profile, class: 'form-control profile', id: "user_profile" %>
        </div>
        <div class="form-group">
            <%= f.submit class: "btn btn-secondary" do %>
            編集
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>