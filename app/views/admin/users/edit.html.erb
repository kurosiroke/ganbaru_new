<div class="container border border-white contents-area bg-white" >
  <div class="row mt-5 mb-5">
    <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12 mx-auto">
      <h3 class="text-center"><strong class="border-bottom border-dark">ユーザー情報編集</strong></h3>
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %> 
      <table class="table table-border contents-area mt-5">
        <tr>
          <th>ID</th>
          <th><%= @user.id %></th>
        </tr>
        <tr>
          <th>アカウント名</th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th>プロフィール</th>
          <th><%= f.text_field :profile %></th>
        </tr>
        <tr>
          <th>ステータス</th>
          <th>
            <%= f.radio_button :is_deleted, false %>
        　   <%= f.label :is_deleted_false,"有効" %>
        　　  <%= f.radio_button :is_deleted, true %>
        　　  <%= f.label :is_deleted_true, "退会" %>
          </th>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>