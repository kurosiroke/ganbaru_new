<div class="container col-10">
    <div class="row">
        <div class="col-3">
        <%= render 'public/mypages/list', user: @user, action: @action %>
        </div>
        <div class="container col-9">
            <div class="row">
                <div class="col-md-8 offset-md-1">
                    <table class="table table-hover table-inveres">
                    <thead>
                        <tr>
                            <th><%= link_to "がんばること一覧",  my_ganbaru_actions_path %></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @ganbaru.each do |action| %>
                    <tr>
                        <td><%= action.created_at.strftime('%Y/%m/%d') %></td>
                        <td>
                            <%= link_to action_path(action.id) do %>
                            <%= action.content %>
                            <% end %>
                        </td>
                        <td> 
                            <%= link_to "削除", action_path, method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
                        </td>
                    </tr>
                    <% end %>
                    </tbody>
                        <table class="table table-hover table-inveres">
                        <thead>
                            <tr>
                                <th><%= link_to "がんばったこと一覧", my_ganbatta_actions_path %></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @ganbatta.each do |action| %>
                            <tr>
                                <td><%= action.created_at.strftime('%Y/%m/%d') %></td>
                                <td>
                                    <%= link_to action_path(action.id) do %>
                                    <%= action.content %>
                                    <% end %>
                                </td>
                                <td> 
                                    <% if @action.user == current_user %>
                                    <%= link_to "削除", action_path, method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                   </table>
                </div>
            </div>
        </div>
    </div>
</div>