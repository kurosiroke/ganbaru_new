<div class="container col-10">
  <div class="row">
    <div class="col-2">
    <%= render 'public/mypages/list', user: @user, attempt: @attempt %>
    </div>
    <div class="container col-9">
      <div class="row">
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inveres">
          <thead>
            <tr>
              <th><%= link_to "がんばること一覧",  my_ganbaru_attempts_path %></th>
              <th></th>
              <th></th>
            </tr>
        </thead>
        <tbody>
        <% @ganbarus.each do |attempt| %>
        <tr>
          <td><%= attempt.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= link_to attempt_path(attempt.id) do %>
            <%= attempt.content %>
            <% end %>
          </td>
          <td> 
            <%= link_to "編集", edit_attempt_path(attempt.id), class: 'btn btn-sm btn-success' %>
          </td>
          <td> 
            <%= link_to "削除", attempt_path(attempt.id), method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
        <% end %>
        </tbody>
          <table class="table table-hover table-inveres">
          <thead>
            <tr>
              <th><%= link_to "がんばったこと一覧", my_ganbatta_attempts_path %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @ganbattas.each do |attempt| %>
            <tr>
              <td><%= attempt.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <%= link_to attempt_path(attempt.id) do %>
                <%= attempt.content %>
                <% end %>
              </td>
              <td> 
                <%= link_to "編集", edit_attempt_path(attempt.id), class: 'btn btn-sm btn-success' %>
              </td>
              <td> 
                <%= link_to "削除", attempt_path(attempt.id), method: :delete,  "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
  </div>
</div>