<div class='container'>
  <div class="row mt-3"><!--本文とヘッダーとの間を開ける-->
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <h2>ログイン</h2>
    
    <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    
      <div class="actions"><br />
        <%= f.submit "ログイン", class: 'btn btn-sm btn-primary'%>
      </div>
    <% end %>
    
    <%#= render "admin/shared/links" %>
    </div>
  </div>
</div>